source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

<%= rack_server_gems %>
gem 'foreman', require: false

gem 'roda', '~> 3.24.0'

gem 'opal', github: 'janbiedermann/opal', branch: 'es6_modules_1_1'
gem 'opal-activesupport', '~> 0.3.3'
gem 'opal-webpack-loader', '>= 0.9.6'

gem 'isomorfeus-redux', '~> 4.0.14'
gem 'isomorfeus-react', '>= 16.10.3'
gem 'isomorfeus-policy', <%= isomorfeus_policy %>
gem 'isomorfeus-transport', <%= isomorfeus_transport %>
gem 'isomorfeus-i18n', <%= isomorfeus_i18n %>
gem 'isomorfeus-data', <%= isomorfeus_data %>
gem 'isomorfeus-operation', <%= isomorfeus_operation %>

group :development do
  gem 'auto_reloader'
  gem 'debase', '0.2.3.beta5'
  gem 'ruby-debug-ide', '0.7.0.beta7'
end

group :test do
  gem 'rspec', '~> 3.8.0'
  gem 'isomorfeus-puppetmaster', '~> 0.2.9'
end
