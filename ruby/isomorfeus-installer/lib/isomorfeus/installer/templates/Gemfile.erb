source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

<%= rack_server_gems %>
gem 'foreman', require: false

gem 'roda', '~> 3.22.0'

gem 'opal', github: 'janbiedermann/opal', branch: 'es6_modules_1_1'
gem 'opal-activesupport', github: 'janbiedermann/opal-activesupport', branch: 'relax'
gem 'opal-webpack-loader', '>= 0.9.2'

gem 'isomorfeus-redux', '~> 4.0.8'
<%= transport_gems %>
gem 'isomorfeus-react', '~> 16.8.9'
#<%= database_gems %>
#<%= policy_gems %>
#<%= operation_gems %>
#<%= i18n_gems %>

group :development do
  gem 'auto_reloader'
  gem 'debase', '0.2.3.beta5'
  gem 'ruby-debug-ide', '0.7.0.beta7'
end

group :test do
  gem 'rspec', '~> 3.8.0'
  gem 'isomorfeus-puppetmaster', '~> 0.2.9'
end
